<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.erenwu.basic.mapper.OrgMapper">

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
        id,
        org_name,
        parent_id,
        org_type,
        opened,
        org_level,
        rank,
        create_time,
        create_user,
        update_time,
        update_user
    </sql>

    <select id="getTreeList" resultType="com.erenwu.basic.entity.Organization">
        select
        <include refid="BaseColumnList"/>
        from t_organization
    </select>


</mapper>
